<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!--눌려졌을때-->
        <shape>
            <solid android:color="#dfe3ee" />
            <stroke android:width="1dp" android:color="#dfe3ee" />
            <corners android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#374b76" android:startColor="#374b76" />

            <stroke android:width="1dp" android:color="#374b76" />
            <corners android:radius="1dp" />

        </shape>
    </item>

</selector>